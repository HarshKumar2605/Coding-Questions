class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        
        // Your code here  
        int one=0;
        for(int i=0;i<=63;i++){
            if(n & ((long long)1<<i))
            one++;
            
        }
       if(one==1)
       return true;
       return false;
        
    }
};
